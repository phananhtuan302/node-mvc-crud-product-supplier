<%- include('../partials/header') %>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3>Add New Product</h3>
                </div>
                <div class="card-body">
                    <form action="/products" method="POST">
                        <div class="mb-3">
                            <label for="name" class="form-label">Name</label>
                            <input type="text" class="form-control <%= errors.name ? 'is-invalid' : '' %>" id="name" name="name" value="<%= product.name || '' %>" required>
                            <% if (errors.name) { %>
                                <div class="invalid-feedback">
                                    <%= errors.name %>
                                </div>
                                <% } %>
                        </div>

                        <div class="mb-3">
                            <label for="quantity" class="form-label">Quantity</label>
                            <input type="number" class="form-control <%= errors.quantity ? 'is-invalid' : '' %>" id="quantity" name="quantity" value="<%= product.quantity || '' %>" min="0" required>
                            <% if (errors.quantity) { %>
                                <div class="invalid-feedback">
                                    <%= errors.quantity %>
                                </div>
                                <% } %>
                        </div>

                        <div class="mb-3">
                            <label for="price" class="form-label">Price</label>
                            <input type="number" step="0.01" class="form-control <%= errors.price ? 'is-invalid' : '' %>" id="price" name="price" value="<%= product.price || '' %>" required>
                            <% if (errors.price) { %>
                                <div class="invalid-feedback">
                                    <%= errors.price %>
                                </div>
                                <% } %>
                        </div>

                        <div class="mb-3">
                            <label for="supplierId" class="form-label">Supplier</label>
                            <select class="form-control <%= errors.supplierId ? 'is-invalid' : '' %>" id="supplierId" name="supplierId" required>
                            <option value="">Select a supplier</option>
                            <% suppliers.forEach(supplier => { %>
                                <option value="<%= supplier._id %>" 
                                        <%= product.supplierId == supplier._id ? 'selected' : '' %>>
                                    <%= supplier.name %>
                                </option>
                            <% }) %>
                        </select>
                            <% if (errors.supplierId) { %>
                                <div class="invalid-feedback">
                                    <%= errors.supplierId %>
                                </div>
                                <% } %>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="/products" class="btn btn-secondary me-md-2">Cancel</a>
                            <button type="submit" class="btn btn-primary">Create Product</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>