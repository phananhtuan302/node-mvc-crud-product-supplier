<%- include('../partials/header') %>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Suppliers</h2>
        <a href="/suppliers/new" class="btn btn-success">Add New Supplier</a>
    </div>

    <% if (suppliers && suppliers.length > 0) { %>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Address</th>
                        <th>Phone</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% suppliers.forEach(supplier => { %>
                        <tr>
                            <td>
                                <%= supplier.name %>
                            </td>
                            <td>
                                <%= supplier.address %>
                            </td>
                            <td>
                                <%= supplier.phone %>
                            </td>
                            <td>
                                <a href="/suppliers/<%= supplier._id %>" class="btn btn-info btn-sm">View</a>
                                <a href="/suppliers/<%= supplier._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
                                <form action="/suppliers/<%= supplier._id %>?_method=DELETE" method="POST" class="d-inline" onsubmit="return confirm('Are you sure?')">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
        <% } else { %>
            <div class="alert alert-info">
                <h4>No suppliers found</h4>
                <p>You haven't added any suppliers yet. <a href="/suppliers/new" class="alert-link">Add your first supplier</a></p>
            </div>
            <% } %>

                <%- include('../partials/footer') %>